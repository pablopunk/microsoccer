{
  "name": "microsoccer",
  "description": "Fetch soccer matches info",
  "version": "1.0.0",
  "author": "Pablo Varela <pablovarela182@gmail.com> (https://pablo.life)",
  "bugs": {
    "url": "https://github.com/pablopunk/microsoccer/issues",
    "email": "pablovarela182@gmail.com"
  },
  "contributors": [
    "Pablo Varela <pablovarela182@gmail.com> (https://pablo.life)"
  ],
  "dependencies": {
    "livesoccertv-parser": "^3.1.2",
    "micro": "^9.0.0"
  },
  "ava": {
    "failFast": true,
    "verbose": true
  },
  "devDependencies": {
    "auto-bind": "^1.1.0",
    "ava": "^0.22.0",
    "codecov": "^2.3.0",
    "cross-env": "^5.0.5",
    "eslint": "^4.5.0",
    "eslint-config-prettier": "^2.3.0",
    "eslint-plugin-prettier": "^2.2.0",
    "got": "^7.1.0",
    "husky": "^0.14.3",
    "lint-staged": "^4.0.4",
    "micro-dev": "^1.2.3",
    "nyc": "^11.1.0",
    "prettier": "^1.6.1",
    "remark-cli": "^4.0.0",
    "remark-preset-github": "^0.0.6",
    "test-listen": "^1.0.2",
    "xo": "^0.19.0"
  },
  "engines": {
    "node": ">=8.3"
  },
  "homepage": "https://github.com/pablopunk/microsoccer",
  "keywords": ["microsoccer", "lass"],
  "license": "MIT",
  "lint-staged": {
    "*.{js,jsx,mjs,ts,tsx,css,less,scss,json,graphql}": [
      "prettier --write --single-quote --trailing-comma none",
      "git add"
    ],
    "*.md": ["remark . -qfo", "git add"]
  },
  "main": "index.js",
  "nyc": {
    "check-coverage": true,
    "reporter": ["lcov", "html", "text"]
  },
  "remarkConfig": {
    "plugins": ["preset-github"]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/pablopunk/microsoccer"
  },
  "scripts": {
    "coverage": "nyc report --reporter=text-lcov > coverage.lcov && codecov",
    "lint": "xo && remark . -qfo",
    "precommit": "lint-staged && npm test",
    "test": "npm run lint && npm run test-coverage",
    "test-coverage": "cross-env NODE_ENV=test nyc ava",
    "start": "micro",
    "dev": "micro-dev"
  },
  "xo": {
    "extends": "prettier",
    "plugins": ["prettier"],
    "parserOptions": {
      "sourceType": "script"
    },
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "singleQuote": true,
          "bracketSpacing": true,
          "trailingComma": "none"
        }
      ],
      "max-len": [
        "error",
        {
          "code": 80,
          "ignoreUrls": true
        }
      ],
      "capitalized-comments": "off",
      "camelcase": "off",
      "no-warning-comments": "off"
    },
    "space": true
  }
}
